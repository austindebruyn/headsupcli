{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "never"],
    "no-plusplus": "off",
    "no-use-before-define": "off",
    "no-useless-escape": "off",
    "prefer-arrow-callback": "off",
    "func-names": "off",
    "no-param-reassign": "off"
  }
}
